<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="HrPlatformClient.UpdateDepartmentPopup"
               Size="300,200">
    <VerticalStackLayout Padding="20" Spacing="10" BackgroundColor="White">
        <Label Text="Оновити назву відділу" FontSize="18" HorizontalOptions="Center"/>
        <Entry x:Name="NewNameEntry" Placeholder="Нова назва"/>
        <HorizontalStackLayout Spacing="10">
            <Button Text="Скасувати" Clicked="OnCancelClicked" BackgroundColor="Gray"/>
            <Button Text="Зберегти" Clicked="OnSaveClicked" BackgroundColor="Green" TextColor="White"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
