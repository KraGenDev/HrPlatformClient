<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#0D47A1</Color>
    <!-- Темно-синій -->
    <Color x:Key="PrimaryDark">#08306B</Color>
    <!-- Темніший синій -->
    <Color x:Key="PrimaryDarkText">#212121</Color>
    <!-- Темний текст -->

    <Color x:Key="Secondary">#26A69A</Color>
    <!-- Бірюзовий -->
    <Color x:Key="SecondaryDarkText">#004D40</Color>
    <!-- Темний бірюзовий -->
    <Color x:Key="Tertiary">#B2DFDB</Color>
    <!-- Світлий бірюзовий -->

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#388E3C</Color>
    <!-- Зелений акцент -->
    <Color x:Key="MidnightBlue">#190649</Color>
    <!-- Акцент -->
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- Додані кольори із нового файлу -->

    <!-- Головні сірі -->
    <Color x:Key="Gray50">#F9FAFB</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>

    <!-- Темні основні -->
    <Color x:Key="DarkBackground">#121212</Color>
    <Color x:Key="DarkSurface">#1E1E1E</Color>
    <Color x:Key="DarkPrimaryText">#E0E0E0</Color>
    <Color x:Key="DarkSecondaryText">#A0A0A0</Color>

    <!-- Світлі основні -->
    <Color x:Key="LightBackground">#FFFFFF</Color>
    <Color x:Key="LightSurface">#F5F5F5</Color>
    <Color x:Key="LightPrimaryText">#111827</Color>
    <Color x:Key="LightSecondaryText">#4B5563</Color>

    <!-- Акцентні -->
    <Color x:Key="PrimaryLight">#93C5FD</Color>

    <Color x:Key="Success">#7ACE7D</Color>
    <Color x:Key="SuccessDark">#609F51</Color>
    <Color x:Key="Red">#E2674B</Color>
    <Color x:Key="RedDark">#CC4235</Color>
    <Color x:Key="Search">#7BB2E0</Color>
    <Color x:Key="SearchDark">#5F80C8</Color>
    <Color x:Key="Refresh">#FFC107</Color>
    <Color x:Key="RefreshDark">#DBAA09</Color>
    <Color x:Key="SearchToggleButtonColor">#5F9EA0</Color>
</ResourceDictionary>
